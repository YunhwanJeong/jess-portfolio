---
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import 'normalize.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Product designer Jess's portfolio website"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="stylesheet" href="https://use.typekit.net/tzi1bha.css" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: 'PP Neue Montreal';
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url('/public/fonts/PPNeueMontreal-Book.otf') format('opentype');
  }
  @font-face {
    font-family: 'PP Neue Montreal';
    font-style: normal;
    font-weight: 500;
    font-display: swap;
    src: url('/public/fonts/PPNeueMontreal-Medium.otf') format('opentype');
  }
  @font-face {
    font-family: 'PP Neue Montreal';
    font-style: normal;
    font-weight: 700;
    font-display: swap;
    src: url('/public/fonts/PPNeueMontreal-Bold.otf') format('opentype');
  }
  @font-face {
    font-family: 'PP Neue Montreal';
    font-style: italic;
    font-weight: 400;
    font-display: swap;
    src: url('/public/fonts/PPNeueMontreal-Italic.otf') format('opentype');
  }
  @font-face {
    font-family: 'PP Neue Montreal';
    font-style: italic;
    font-display: swap;
    font-weight: 600;
    src: url('/public/fonts/PPNeueMontreal-SemiBolditalic.otf')
      format('opentype');
  }
  body {
    font-family: 'PP Neue Montreal', sans-serif;
    font-weight: 400;
    font-style: normal;
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr;
    color: #e7e7e7;
    background: #0d0d0d;
  }
  /* Reset CSS */
  * {
    box-sizing: border-box;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    margin: 0;
  }
  a {
    text-decoration: none;
    color: unset;
  }
  button {
    border: none;
    background-color: transparent;
    color: inherit;
  }
  ul,
  ol {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
</style>
